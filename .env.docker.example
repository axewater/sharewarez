# Docker-specific environment configuration for SharewareZ
# Copy this file to .env when using Docker and customize the values

# Database connection - NOTE: Use 'db' as hostname for Docker Compose setup
DATABASE_URL=postgresql://postgres:postgres@db:5432/sharewarez

# Test database (only needed if running unit tests)
TEST_DATABASE_URL=postgresql://postgres:postgres@db:5432/sharewareztest

# Game storage directory - mounted as volume in docker-compose.yml
DATA_FOLDER_WAREZ=/storage

# Base folders (for path resolution)
BASE_FOLDER_WINDOWS=C:\
BASE_FOLDER_POSIX=/

# Flask secret key - CHANGE THIS to a secure random string
SECRET_KEY=put_your_own_secret_string_here_32617432

# Static files directory - this is where cover images and zips are stored
# This should be mounted as a volume for persistence
UPLOAD_FOLDER=/app/modules/static/library

# Development mode - set to true during theme development
DEV_MODE=false

# Docker-specific PostgreSQL configuration
# These variables are used by the postgres container in docker-compose.yml
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sharewarez

# Additional Docker configuration
# Database host for internal container communication
DATABASE_HOST=db
DATABASE_PORT=5432