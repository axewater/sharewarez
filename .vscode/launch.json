{
    "version": "0.2.0",
    "configurations": [

      {
        "type": "debugpy",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}/${input:programPath}",
        "console": "integratedTerminal",
        "envFile": "${workspaceFolder}/.env"
      }
    ],
    "inputs": [
      {
        "type": "pickString",
        "id": "programPath",
        "description": "Select the Python file to debug",
        "options": [
          "app.py",
          "modules/init_data.py",
          "modules/routes.py",
          "modules/routes_admin.py",
          "modules/routes_auth.py",
          "modules/utils_discord.py",
          "modules/routes_library.py",
          "modules/routes_site.py",
          "modules/updateschema.py"
        ]
      }
    ]
  }